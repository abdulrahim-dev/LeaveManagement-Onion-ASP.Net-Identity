
@{
    ViewBag.Title = "New";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model LeaveManagement.Web.Models.PaySlipViewModel
<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Add New PaySlip</h3>

    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                @using (Html.BeginForm("New", "PaySlip", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal style-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">User</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.UserId, new SelectList(Model.Users, "UserId", "Name"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Year</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.YearId, new SelectList(Model.Years, "Id", "Name"), new {@class = "form-control"})
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Month</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.MonthId, new SelectList(Model.Months, "Id", "Name"), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Upload File</label>
                        <div class="col-sm-10">
                            <input type="file" name="file" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10">
                            <button type="submit" class="btn btn-default">Save</button>
                        </div>
                    </div>
                    <span class="bg-danger">@Html.ValidationSummary(true)</span>
                }

            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->
</section>

